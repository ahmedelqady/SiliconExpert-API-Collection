{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "postman-html-diff.schema.json",
  "title": "Postman HTML Diff Artifact",
  "type": "object",
  "required": ["baseline", "current", "summary", "categories", "endpoints", "htmlBlocksChanged"],
  "properties": {
    "baseline": {
      "type": "object",
      "required": ["commit", "fileHash", "collectionPath"],
      "properties": {
        "commit": {"type": "string"},
        "fileHash": {"type": "string"},
        "collectionPath": {"type": "string"}
      }
    },
    "current": {
      "type": "object",
      "required": ["commit", "fileHash", "collectionPath"],
      "properties": {
        "commit": {"type": "string"},
        "fileHash": {"type": "string"},
        "collectionPath": {"type": "string"}
      }
    },
    "summary": {
      "type": "object",
      "required": [
        "categoriesAdded",
        "categoriesRemoved",
        "categoriesChanged",
        "endpointsAdded",
        "endpointsRemoved",
        "endpointsChanged"
      ],
      "properties": {
        "categoriesAdded": {"type": "integer", "minimum": 0},
        "categoriesRemoved": {"type": "integer", "minimum": 0},
        "categoriesChanged": {"type": "integer", "minimum": 0},
        "endpointsAdded": {"type": "integer", "minimum": 0},
        "endpointsRemoved": {"type": "integer", "minimum": 0},
        "endpointsChanged": {"type": "integer", "minimum": 0}
      }
    },
    "categories": {
      "type": "object",
      "required": ["added", "removed", "changed"],
      "properties": {
        "added": {"type": "array", "items": {"type": "string"}},
        "removed": {"type": "array", "items": {"type": "string"}},
        "changed": {"type": "array", "items": {"type": "string"}}
      }
    },
    "endpoints": {
      "type": "object",
      "required": ["added", "removed", "changed"],
      "properties": {
        "added": {"type": "array", "items": {"type": "string"}},
        "removed": {"type": "array", "items": {"type": "string"}},
        "changed": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "changeTypes"],
            "properties": {
              "id": {"type": "string"},
              "changeTypes": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["method", "path", "params", "description", "examples", "category"]
                }
              }
            }
          }
        }
      }
    },
    "htmlBlocksChanged": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["API_DATA", "EXAMPLES", "RELEASE_NOTES"]
      }
    },
    "releaseNoteEntry": {
      "type": ["object", "null"],
      "properties": {
        "version": {"type": "string"},
        "date": {"type": "string"},
        "title": {"type": "string"},
        "status": {"type": "string", "enum": ["changed", "no-change"]}
      }
    }
  }
}
